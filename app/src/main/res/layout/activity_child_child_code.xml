<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.grupp4.minbusskompis.ui.ChildChildCode"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/child_code_title"
        android:id="@+id/textView2"
        android:textSize="@dimen/font_title"/>

    <TextView
        android:gravity="center"
        android:textColor="@color/font_standard"
        android:background="@color/layout_title"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/child_code_code_textview"
        android:textSize="30sp"
        android:text="1337"
        />

    <Button
        android:layout_marginTop="@dimen/button_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/child_code_next_button"
        android:textColor="@color/button_text"
        android:background="@color/button_background"
        android:id="@+id/child_code_next_button" />

    <Button
        android:layout_marginTop="@dimen/button_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/button_text"
        android:background="@color/button_background"
        android:text="@string/all_dialog_reset"
        android:id="@+id/child_code_reset_button" />


</LinearLayout>
