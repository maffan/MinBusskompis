<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.grupp4.minbusskompis.ui.ChildOnBus"
    android:background="#4fffc5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave bus"
        android:id="@+id/button_dummy_busonbus" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/child_on_bus_title"
        android:text="@string/child_on_bus_title"
        android:layout_below="@+id/button_dummy_busonbus"
        android:gravity="center"
        android:textSize="@dimen/font_title"
        android:textColor="@color/font_standard"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/standard_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/layout"
        android:layout_below="@+id/child_on_bus_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/child_on_bus_your_bus_stop"
            android:background="@color/layout_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Bus stop name"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/child_on_bus_destination_bus_stop"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/child_on_bus_arriving_at"
            android:background="@color/layout_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Time to your bus stop"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/child_on_bus_station_time_to_bus_stop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/child_on_bus_next_bus_stop"
            android:background="@color/layout_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Your bus name"
            android:gravity="center"
            android:textSize="18sp"
            android:id="@+id/child_on_bus_next_bus_stop"
            />

    </LinearLayout>
</RelativeLayout>
