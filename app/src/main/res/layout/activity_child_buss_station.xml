<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.grupp4.minbusskompis.ui.ChildBusStation"
    android:background="#4fffc5">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on bus"
        android:id="@+id/button_dummystation"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#fff"
            android:layout_below="@+id/button_dummystation">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Bus leaving from:"
                android:background="#ccc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Bus station name and char"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/child_bus_stop_bsname_char"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Bus coming in:"
                android:background="#ccc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Bus coming in, minutes"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/child_bus_station_time_to_bus"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:text="Your bus:"
                android:background="#ccc"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Next bus name"
                android:gravity="center"
                android:textSize="18sp"
                android:id="@+id/child_bus_station_next_bus_name"
                />

        </LinearLayout>

</RelativeLayout>

